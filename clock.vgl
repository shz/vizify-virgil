export struct Clock {
  fromStart : int = 0  # ms from clock start
  fromEnd : int = 0    # ms from clock end
  percent : float = 0.0f # % through clock
}

export method update(c : Clock, elapsed : int, duration : int) {
  c.fromStart = elapsed
  c.fromEnd = duration - elapsed
  c.percent = (1.0f * elapsed) / duration
}
