export struct Clock {
  fromStart = 0  # ms from clock start
  fromEnd = 0    # ms from clock end
  percent = 0.0f # % through clock
}

export method update(c : Clock, elapsed : int, duration : int) {
  c.fromStart = elapsed
  c.fromEnd = duration - elapsed
  c.percent = (1.0f * elapsed) / duration
}
